<%-include('../cabecalho')-%>
<form method="post">
    <input type="text" name="pesquisar" id="pesquisar" placeholder="Digite aqui o que você deseja pesquisar!">
    <input type="submit" value="Pesquisar">
</form>
<table>
    <tr>
        <th>_id</th>
        <th>Título</th>
        <th>Ano</th>
        <th>Duração</th>
        <th>Edita</th>
        <th>Deleta</th>
    </tr>

    <%Produtos.forEach(function(produto){  %>
    <tr>
        <td><%=produto._id %></td>
        <td><%=produto.titulo %></td>
        <td><%=produto.ano %></td>
        <td><%=produto.tempo %></td>
        <td>
            <a href="/produto/edt/<%=produto._id %>">Editar</a>
        </td>
        <td>
            <a href="/produto/del/<%=produto._id %>">Deletar</a>
        </td>
    </tr>
    <% }) %>
</table>
<%-include('../rodape')-%>